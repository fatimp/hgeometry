signature HGeometry.Sigs.Point.Affine where

import HGeometry.Sigs.Point (Point)
import HGeometry.Sigs.Vector (Vector)

--------------------------------------------------------------------------------

-- | p .-. q represents the vector from q to p
(.-.) :: Point -> Point -> Vector

-- | add a vector to a point
--
-- >>> myPoint .+^ Vector3 100 200 300
-- Point3 101 202 303
(.+^) :: Point -> Vector -> Point
