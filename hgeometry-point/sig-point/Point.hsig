--------------------------------------------------------------------------------

-- | d-dimensional points
data Point :: Type


instance Eq Point
instance Ord Point
instance NFData Point

instance Show Point


--------------------------------------------------------------------------------

-- | Lens to access the vector of this point
vector :: Lens' Point Vector


